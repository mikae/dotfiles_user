" Movements {
nnoremap <A-g> gg
nnoremap <A-S-g> G

nnoremap <A-H> 0
nnoremap <A-L> $

nnoremap <A-d> <C-d>
nnoremap <A-u> <C-u>
nnoremap <A-b> <C-b>
nnoremap <A-f> <C-f>

nnoremap <A-p> %

nnoremap <A-h> h
nnoremap <A-j> j
nnoremap <A-k> k
nnoremap <A-l> l
"}

" Jumps {
nnoremap <C-j>b <C-o>
nnoremap <C-j>f <C-i>
" }

" Zooming {
nnoremap zi zi
nnoremap zo zo
"}

" Copying {
nnoremap y y
" }

" Global {
nnoremap <C-,><C-q>   :quit<CR>
nnoremap <C-,><C-S-q> :quitall<CR>
" }

" Hints {
nnoremap f f
nnoremap F F
nnoremap ; ;
"}

" History {
nnoremap u :back<CR>
nnoremap U :forward<CR>
nnoremap H :history<CR>
"}

" Search {
nnoremap <A-/>     /
nnoremap <A-?>     ?
nnoremap <A-n>     n
nnoremap <A-S-n>   N
nnoremap <A-*>     *
nnoremap <A-#>     #
nnoremap <A-Space> :nohlsearch<CR>
"}

" Bookmarks {
nnoremap <C-,>bn :bmark!<CR>
nnoremap <C-,>bN :bmark 
nnoremap <C-,>bt A
nnoremap <C-,>bl :bmarks<CR>
nnoremap <C-,>bd :delbmarks 

inoremap <C-,>bn <Esc>:bmark!<CR>
inoremap <C-,>bN <Esc>:bmark 
inoremap <C-,>bt <Esc>A
inoremap <C-,>bl <Esc>:bmarks<CR>
inoremap <C-,>bd <Esc>:delbmarks 
"}

" Repeating {
nnoremap . .
nnoremap , @:
"}

" Macro {
nnoremap q      q
nnoremap <C-,>ml :macros<CR>
nnoremap <C-,>mL :macros 
nnoremap <C-,>mp :play 
nnoremap @      @
nnoremap @@     @@
"}

" Printing {
nnoremap <C-,>p :hardcopy<CR>
nnoremap <C-,>P :hardcopy!<CR>
"}

" Dialogs {
nnoremap <C-Space>dad :tabopen<CR>:addons<CR>
nnoremap <C-Space>dab :tabopen<CR>:dialog about<CR>
nnoremap <C-Space>dco :tabopen<CR>:dialog console<CR>
nnoremap <C-Space>ddo :tabopen<CR>:dialog downloads<CR>
nnoremap <C-Space>dct :tabopen<CR>:dialog customizetoolbar<CR>
nnoremap <C-Space>ddi :tabopen<CR>:dialog dominspector<CR>
nnoremap <C-Space>dhi :tabopen<CR>:dialog dominspector<CR>
nnoremap <C-Space>dps :tabopen<CR>:dialog pagesource<CR>
nnoremap <C-Space>dpe :tabopen<CR>:dialog preferences<CR>
"}

" Caret {
nnoremap c     c
nnoremap v     v

cnoremap <A-h> h
cnoremap <A-j> j
cnoremap <A-k> k
cnoremap <A-l> l
cnoremap y     y
" }

" Command line {
" Emacs-like ex
nnoremap <C-:>      :

" Exit from command line
cnoremap <C-,><C-j> <C-c>

" Completion
cnoremap <A-l>      <Tab>

" Recall last commands from command history
cnoremap <A-k>      <S-Up>
cnoremap <A-j>      <S-Down>

" Recall last commands from command history that matches string
cnoremap <A-S-k>    <Up>
cnoremap <A-S-j>    <Down>
"}

" Insert mode {
" Esc-alternative in insert mode
inoremap <C-,><C-j> <Esc>
"}

" Caret mode {
cnoremap <C-,><C-j> <Esc>
""}

" Visual mode {
" Movements
vnoremap <A-g> gg
vnoremap <A-S-g> G

vnoremap <A-H> 0
vnoremap <A-L> $

vnoremap <A-d> <C-d>
vnoremap <A-u> <C-u>
vnoremap <A-b> <C-b>
vnoremap <A-f> <C-f>

vnoremap <A-p> %

vnoremap <A-h> h
vnoremap <A-j> j
vnoremap <A-k> k
vnoremap <A-l> l

vnoremap <C-,><C-j> <Esc>
"}

" Copy-pasting {
inoremap <C-c> <C-c>
inoremap <C-v> <C-v>
inoremap <C-x> <C-x>
" }

" Fast reload vimperator config
nnoremap <C-,><C-r> :source ~/.vimperatorrc<CR>

" Restart firefox
nnoremap <C-,><C-S-r> :restart<CR>

echomsg "mappings.vimperatorrc loaded"
" End