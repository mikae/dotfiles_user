" Window {
nnoremap <C-w>n :winopen 
nnoremap <C-w>q :winclose<CR>
nnoremap <C-w>Q :wqall<CR>
nnoremap <C-w>o :winonly<CR>
nnoremap <C-w>w :window 

inoremap <C-w>n <Esc>:winopen 
inoremap <C-w>q <Esc>:winclose<CR>
inoremap <C-w>Q <Esc>:wqall<CR>
inoremap <C-w>o <Esc>:winonly<CR>
inoremap <C-w>w <Esc>:window 
"}

" Page {
nnoremap <C-p>h :back<CR>
nnoremap <C-p>l :forward<CR>
nnoremap <C-p>p gu
nnoremap <C-p>P gU
nnoremap <C-p>H gH
nnoremap <C-p>c :stop<CR>
nnoremap <C-p>C :stopall<CR>
nnoremap <C-p>r :reload<CR>
nnoremap <C-p>R :reload<CR>
nnoremap <C-p>s :saveas! 
nnoremap <C-p>n :open 

inoremap <C-p>h <Esc>:back<CR>
inoremap <C-p>l <Esc>:forward<CR>
inoremap <C-p>p <Esc>gu
inoremap <C-p>P <Esc>gU
inoremap <C-p>H <Esc>gH
inoremap <C-p>c <Esc>:stop<CR>
inoremap <C-p>C <Esc>:stopall<CR>
